datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Link {
    id          Int         @id @default(autoincrement())
    createdAt   DateTime    @default(now())
    title       String
    artist      String  
    tags        String      //Tag[] // @relation(references: [id])
    description String
    url         String
    // musicUrl String
    // discogsUrl  String

    postedBy    User?       @relation(fields: [postedById], references: [id])
    postedById  Int?
    // votes       Vote[]
}
